<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/large_margin"
    android:layout_marginTop="@dimen/high_margin"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="bottom|center">

        <ImageView
            android:layout_width="@dimen/intro_image_size"
            android:layout_height="@dimen/intro_image_size"
            android:src="@drawable/intro4" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro4_title"
            android:textColor="@color/color_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/title_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro4_description"
            android:layout_marginTop="@dimen/medium_margin"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textSize="@dimen/medium_font" />

    </LinearLayout>



</LinearLayout>