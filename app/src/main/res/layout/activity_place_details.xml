<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewPlace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cardViewBook"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagePlace"
            style="@style/style_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-20dp"
            android:layout_weight="0.6"
            android:contentDescription="@string/app_name"
            android:src="@drawable/travel_1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="-20dp"
            android:layout_weight="0.4"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/medium_margin">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textPlaceTitle"
                    style="@style/style_text_title"
                    android:padding="0dp"
                    android:text="@string/place_title_1"
                    android:textSize="@dimen/font_22" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textPlaceLoction"
                        style="@style/style_desc"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/dim_2"
                        android:padding="0dp"
                        android:text="@string/place_location_1"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_16"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/imageRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dim_2"
                        android:src="@drawable/ic_star" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textPlaceRating"
                        style="@style/style_desc"
                        android:layout_width="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        android:text="@string/ratings"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_16" />
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textPlaceCategory"
                    style="@style/style_desc"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/dim_2"
                    android:background="@drawable/tag_background"
                    android:paddingStart="@dimen/medium_margin"
                    android:paddingEnd="@dimen/medium_margin"
                    android:text="@string/category_mountain"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"
                    android:textStyle="normal" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/font_20"
                    android:scrollbars="none">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textPlaceDesc"
                        style="@style/style_desc"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dim_15"
                        android:padding="0dp"
                        android:text="@string/desc_butchart_gardens"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_14"
                        android:textStyle="normal" />
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/large_margin"
        app:cardCornerRadius="7dp"
        app:cardElevation="@dimen/dim_15">

        <ImageView
            android:id="@+id/imageBack"
            style="@style/style_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:contentDescription="@string/title_back"
            android:src="@drawable/ic_arrow_back" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="@dimen/dim_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_margin">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textPrice"
                style="@style/style_text_title"
                android:padding="@dimen/dim_2"
                android:text="@string/demo_price"
                android:textColor="@color/color_green_light"
                android:textSize="@dimen/font_16" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/style_text_title"
                android:layout_below="@id/textPrice"
                android:padding="@dimen/dim_2"
                android:text="@string/price_for_people"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_12"
                android:textStyle="normal" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBook"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_button_primary"
                android:text="@string/book_tour"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
