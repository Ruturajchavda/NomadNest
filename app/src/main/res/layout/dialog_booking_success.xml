<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewPlace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dim_15">

        <ImageView
            android:id="@+id/imageClose"
            android:layout_width="@dimen/dim_30"
            android:layout_height="@dimen/dim_30"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animSuccess"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/imageClose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_30"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation_success" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/style_text_title"
            android:layout_below="@id/animSuccess"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dim_15"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/trip_booked_successfully"
            android:textColor="@color/color_green_light"
            android:textSize="@dimen/font_20" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>